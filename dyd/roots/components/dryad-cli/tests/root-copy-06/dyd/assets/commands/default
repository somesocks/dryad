#!/usr/bin/env bash

#
# turn this on to debug script
# set -x

#
# abort on error
# https://sipb.mit.edu/doc/safe-shell/
set -euf -o pipefail

SRC_DIR=$DYD_STEM
TEMP_DIR=''

# import assertion functions
. $SRC_DIR/dyd/assets/assertions.sh

_setup() {
	#
	# make a temporary working directory
	# this command is linux / osx agnostic
	# https://unix.stackexchange.com/questions/30091/fix-or-alternative-for-mktemp-in-os-x
	# echo "\[INFO\] creating temporary working directory" 1>&2;
	TEMP_DIR=''
	TEMP_DIR=`mktemp -d 2>/dev/null || mktemp -d -t 'build-dir'`
}

_prepare() {
	# echo "[INFO] creating garden" 1>&2;

	# copy the sample garden to the working directory
	cp -R "$SRC_DIR/dyd/assets/sample-garden/." "$TEMP_DIR" 
	chmod -R 755 "$TEMP_DIR"

	:;
}

_test() {
	cd "$TEMP_DIR";
	# NOTE: this root is copied several times, to attempt to trigger
	# any pathological concurrency issues in the build
	dryad root copy dyd/roots/group-01/root-02 dyd/roots/group-02/root-02 --unpin --log-level="$DYD_LOG_LEVEL" 1>&2;
	dryad root copy dyd/roots/group-01/root-02 dyd/roots/group-02/root-03 --log-level="$DYD_LOG_LEVEL" 1>&2;
	dryad root copy dyd/roots/group-01/root-02 dyd/roots/group-03/root-02 --log-level="$DYD_LOG_LEVEL" 1>&2;
	dryad roots build --log-level="$DYD_LOG_LEVEL" 1>&2;
}

_verify() {
	assert_directory_exists "$TEMP_DIR/dyd"
	assert_file_content_equals "$TEMP_DIR/dyd/type" "garden"

	assert_directory_exists "$TEMP_DIR/dyd/roots/group-01/root-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-01/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-01/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-01/root-01/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-01/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-01/root-01/dyd/assets/test-link-01" "./test-file-01"

	assert_directory_exists "$TEMP_DIR/dyd/roots/group-01/root-02"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/assets/test-link-01" "./test-file-01"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-01/root-02/dyd/requirements/root-01" "../../../root-01"


	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-01/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-01/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-01/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-01/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-02/root-01/dyd/assets/test-link-01" "./test-file-01"

	# group-02/root-02 was copied in unpinned mode, so the root-01 requirement should point to the local root-01 (group-02/root-01)
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-02"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/assets/test-link-01" "./test-file-01"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-02/root-02/dyd/requirements/root-01" "../../../root-01"

	# group-02/root-03 was copied in pinned mode, so the root-01 requirement should point to the original root-01 (group-01/root-01)
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-03"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/assets/test-link-01" "./test-file-01"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-02/root-03/dyd/requirements/root-01" "../../../../group-01/root-01"

	# group-03/root-02 was copied in unpinned mode, but into a directory with no local root-01,
	# so the root-01 requirement should point to the original root-01 (group-01/root-01)
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-03/root-02"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/type" "root"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/assets/test-file-01" "test-file-01"
	assert_directory_exists "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/assets/test-dir-01"
	assert_file_content_equals "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/assets/test-dir-01/test-file-02" "test-file-02"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/assets/test-link-01" "./test-file-01"
	assert_symlink_target "$TEMP_DIR/dyd/roots/group-03/root-02/dyd/requirements/root-01" "../../../../group-01/root-01"

	:;
}

_teardown() {
	# echo "\[INFO\] tearing down fixtures" 1>&2;
	if [ -d "$TEMP_DIR" ]; then
		chmod -R 755 "$TEMP_DIR"
		rm -rf "$TEMP_DIR"
	fi
}

trap _teardown ERR EXIT
_setup
_prepare
_test
_verify
