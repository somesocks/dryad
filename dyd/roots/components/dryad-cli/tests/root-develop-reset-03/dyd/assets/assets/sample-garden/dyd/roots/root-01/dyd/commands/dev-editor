#!/usr/bin/env bash
set -euf -o pipefail

OUT_DIR="$DYD_GARDEN/dyd/heap/root-develop-reset-03"
mkdir -p "$OUT_DIR"

rm -f "$DYD_STEM/dyd/assets/file.txt"
"$DYD_CLI_BIN" root develop reset > "$OUT_DIR/reset"
"$DYD_CLI_BIN" root develop status > "$OUT_DIR/status"
if [ -f "$DYD_STEM/dyd/assets/file.txt" ]; then
  cat "$DYD_STEM/dyd/assets/file.txt" > "$OUT_DIR/file"
fi
